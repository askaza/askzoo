<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xml" href="../utilities/master.xsl"?>
<page
		xmlns:a="http://slcf/templates/settings/bem-scheme/additional"
		xmlns:b="http://slcf/templates/settings/bem-scheme/block"
		xmlns:d="http://slcf/templates/settings/bem-scheme/data"
		xmlns:e="http://slcf/templates/settings/bem-scheme/element"
		xmlns:p="http://slcf/templates/settings/bem-scheme/pointer"
		xmlns:m="http://slcf/templates/settings/bem-scheme/modification"
		xmlns:t="http://slcf/templates/settings/bem-scheme/template"
		xmlns:x="http://slcf/templates/settings/bem-scheme/xhtml"
		xmlns:alxc="http://slcf/templates/settings/bem-scheme/additional-legacy-xhtml-class"
		>
	<project>
		<include xmlns="http://www.w3.org/2001/XInclude" href="../settings/settings.xml"/>
	</project>
	<meta>
		<title handle="blank">Формы</title>
		<description>Формы</description>
	</meta>


	<templates>
		<t:xtitle>Формы</t:xtitle>

		<t:column-main>
			<p:breadcrumbs/>
			<b:page-header>Заголовок формы</b:page-header>
			<b:standard-form>
				<b:form>
					<b:form-line>
						<b:form-item>
							<e:label><b:label>Логин: </b:label></e:label>
							<e:field>ivan_petrovich</e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item>
							<e:label><b:label>Поле Текст: </b:label></e:label>
							<e:field><b:input-text/></e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item>
							<e:label><b:label>Поле Пароль: </b:label></e:label>
							<e:field><b:input-password/><e:hint>Подсказка к полю</e:hint></e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item>
							<e:label><b:label>Поле Select: </b:label></e:label>
							<e:field>
								<b:select>
									<e:option>Все опции</e:option>
									<e:option>А-Я</e:option>
									<e:option>Option 1</e:option>
									<e:option x:disabled="disabled">Disabled option</e:option>
									<e:option>Option 2</e:option>
								</b:select>
								<e:hint>Подсказка к полю</e:hint>
							</e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item><a:error/>
							<e:label><b:label>E-mail: </b:label></e:label>
							<e:field>
								<b:input-email/>
								<e:hint>Подсказка к полю, поле не должно содержать кириллических символов, звездочек, сердечек и пр. ррполыпрвап</e:hint>
								<b:error-text>Неправильный адрес E-mail, поле не должно содержать кириллических символов, звездочек, сердечек и пр. ррполыпрвап</b:error-text>
							</e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item>
							<e:label><b:label>Защитный код: <b:required>*</b:required></b:label></e:label>
							<e:field>
								<b:captcha>
									<e:pic><b:image x:src="./images/temp/captcha.jpg"/></e:pic>
									<b:input-text/>
								</b:captcha>
							</e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item><a:error/>
							<e:label><b:label>Загрузка картинки:</b:label></e:label>
							<e:field>
								<b:input-file-img><b:image x:src="./images/content/userpic_85.gif" x:class="jq-file__image" /></b:input-file-img>
								<b:input-file><a:input-file-type-img/></b:input-file>
								<e:hint>Формат файла должен быть jpg, gif, png, bmp</e:hint>
								<b:error-text>Формат файла должен быть jpg, gif, png, bmp</b:error-text>
							</e:field>
						</b:form-item>
					</b:form-line>
					<b:form-line>
						<b:form-item><a:error/>
							<e:label><b:label>Загрузка файла:</b:label></e:label>
							<e:field>
								<b:input-file/>
							</e:field>
						</b:form-item>
					</b:form-line>

					<cdata><![CDATA[
					<script type="text/javascript">
					$(window).ready(function(){
						$(function() {
							$('select, input[type="file"]').styler();
						})
					})
					</script>
					]]></cdata>

					<b:form-line>
						<b:form-button><b:input-submit x:value="Submit Large"><a:btn/><a:btn-large/></b:input-submit></b:form-button>
						<b:form-button><b:input-submit x:value="Submit Medium"><a:btn/><a:btn-medium/></b:input-submit></b:form-button>
						<b:form-button><b:input-submit x:value="Submit Small"><a:btn/><a:btn-small/></b:input-submit></b:form-button>
						<b:form-button><b:input-submit x:value="Кнопка Submit"><a:btn/></b:input-submit></b:form-button>
					</b:form-line>
					<e:required-box><b:required>*</b:required><cdata><![CDATA[ - поля, обязательные для заполнения]]></cdata></e:required-box>
				</b:form>
			</b:standard-form>
		</t:column-main>
	</templates>

	<page-canvas>
		<p:layout/>
	</page-canvas>
</page>